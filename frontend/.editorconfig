# Common Settings
root = true

[*]
indent_style = space
indent_size = 2
end_of_line = lf
charset = utf-8
trim_trailing_whitespace = true
insert_final_newline = true

# The JSON files contain newlines inconsistently
[*.json]
insert_final_newline = ignore

# Minified JavaScript files shouldn't be changed
[**.min.js]
indent_style = ignore
insert_final_newline = ignore

# Batch Files
[*.{cmd,bat,ps1,psm1}]
end_of_line = crlf

# Bash Files
[*.sh]
end_of_line = lf

# JSX dosyaları için ekstra ayarlar
[*.{jsx,tsx}]
react = true
